<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomToolbar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="navigationIcon">@drawable/ic_chevron_left</item>
        <item name="navigationIconTint">?colorAccent</item>
        <item name="android:theme">@style/Widget.AppCompat.ActionBar</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.AppCompat.Toolbar.Button.Navigation</item>
    </style>

    <style name="StyleBodyLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StyleBodyMedium" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StyleTitleSmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
    </style>

</resources>